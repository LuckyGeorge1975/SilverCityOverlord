<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage x:TypeArguments="viewModels:MainViewModel"
                x:DataType="viewModels:MainViewModel"
                xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:views="using:tdc.maui.silvercity.Views"
                xmlns:viewModels="using:tdc.maui.silvercity.ViewModels"
                x:Class="tdc.maui.silvercity.MainPage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label HorizontalTextAlignment="Center">Silver City Overlords</Label>
        <Button
            x:Name="BtnNewGame"
            Text="New Game" 
            Command="{Binding CreateNewGameCommand}"
            HorizontalOptions="Fill" />
    </VerticalStackLayout>
</views:BasePage>
